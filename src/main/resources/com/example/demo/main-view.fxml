<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Label?>
<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="700.0"
          xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.MainController">
    <columnConstraints>
        <ColumnConstraints percentWidth="50" />
        <ColumnConstraints percentWidth="25" />
        <ColumnConstraints percentWidth="20" />
        <ColumnConstraints percentWidth="10" />

    </columnConstraints>
    <HBox fx:id="startBox"  alignment="CENTER" spacing="20.0" GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="1">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <Button text="Start the game as Kachakonya" onAction="#onKachakonyaButtonClick"/>
        <Button text="Start the game as Graonia" onAction="#onGraoniaButtonClick"/>
    </HBox>
    <HBox fx:id="indicatorBox" alignment="CENTER_LEFT" spacing="20.0" GridPane.columnIndex="0" GridPane.rowIndex="1"
          GridPane.columnSpan="1">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
    </HBox>
    <VBox fx:id="eventBox" alignment="CENTER" spacing="20.0" GridPane.columnIndex="0" GridPane.rowIndex="2"
          GridPane.columnSpan="2">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
    </VBox>
    <HBox fx:id="jobBox" alignment="CENTER_RIGHT" spacing="20.0" GridPane.columnIndex="1" GridPane.rowIndex="1"
          GridPane.columnSpan="1">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
    </HBox>
    <VBox fx:id="infoBar" alignment="CENTER" spacing="20.0" GridPane.columnIndex="3" GridPane.rowIndex="1"
    GridPane.rowSpan="1">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <fx:define>
            <ToggleGroup fx:id="leftBar" />
        </fx:define>
        <ToggleButton onAction="#onPartyButtonClick" >
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@menu_icons/PartyIcon.png"/>
                </ImageView>
            </graphic>
            <toggleGroup>
                <fx:reference source="leftBar"/>
            </toggleGroup>
        </ToggleButton>
        <ToggleButton onAction="#onBudgetButtonClick">
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@menu_icons/BudgetIcon.png"/>
                </ImageView>
            </graphic>
        <toggleGroup>
            <fx:reference source="leftBar"/>
        </toggleGroup>
        </ToggleButton>
        <ToggleButton onAction="#onMediaButtonClick">
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@menu_icons/MediaIcon.png"/>
                </ImageView>
            </graphic>
            <toggleGroup>
                <fx:reference source="leftBar"/>
            </toggleGroup>
        </ToggleButton>
    </VBox>
            <VBox fx:id="infoBox" prefHeight="131.0" prefWidth="126.0"  GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.rowSpan="3">
    </VBox>
    <Label fx:id="roundLabel" GridPane.columnIndex="0" GridPane.rowIndex="3">

    </Label>
</GridPane>