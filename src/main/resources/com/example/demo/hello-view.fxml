<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.GridPane?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.HelloController">
    <gridLinesVisible>false</gridLinesVisible>
    <HBox fx:id="startBox"  alignment="CENTER" spacing="20.0" GridPane.columnIndex="0" GridPane.rowIndex="1"
          GridPane.columnSpan="1">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <Button text="Start the game" onAction="#onStartButtonClick"/>
    </HBox>
    <HBox fx:id="indicatorBox" alignment="CENTER" spacing="20.0" GridPane.columnIndex="0" GridPane.rowIndex="2"
          GridPane.columnSpan="1">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

    </HBox>
    <VBox fx:id="eventBox" alignment="CENTER" spacing="20.0" GridPane.columnIndex="0" GridPane.rowIndex="3"
          GridPane.columnSpan="2">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
    </VBox>
    <HBox fx:id="jobBox" alignment="CENTER" spacing="20.0" GridPane.columnIndex="1" GridPane.rowIndex="2"
          GridPane.columnSpan="1">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
    </HBox>
</GridPane>